@model GranjaSystem.Models.tblLotes

@{
    ViewBag.Title = "Modificar Registro";
}

<div class="row content container-fluid">
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><h4>CONTROL DE LOTES</h4></div>
        <div class="panel-body bg-gray">
            <form action="" method="post" id="Validacion">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IdLote)

                    <div class="form-group">
                        <Label class="control-label col-md-2">Lote</Label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NumLote, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NumLote, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Fecha Registro</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FechaRegistro, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                            @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Estado</label>
                        <div class="col-md-10">
                            <select name="Estado" class="form-control">
                                <option value="En Proceso">En Proceso</option>
                                <option value="Finalizado">Finalizado</option>
                                
                            </select>

                          
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-9 col-sm-3" align="right">
                            <input type="submit" value="Modificar" class="btn btn-success" />
                            @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
                }
            </form>
        </div>
    </div>
</div>

@section Validar{
    <script type="text/javascript">
        $("#Validacion").validate({
            rules: {
                NumLote: {
                    required: true
                }

            }
        });
    </script>

}


