@model GranjaSystem.Models.tblDetalleLote

@{
    ViewBag.Title = "Modificar Registro";
}
<div class="row content container-fluid">
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><h4>CONTROL DETALLE DE LOTES</h4></div>
        <div class="panel-body bg-gray">
            <form action="" id="Validacion" method="post">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdDLote)

                        <div class="form-group">
                            <label class="control-label col-md-2"> Cerda</label>
                            <div class="col-md-10">
                                @Html.DropDownList("IdCerda", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdCerda, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <Label class = "control-label col-md-2">Fecha Inseminación</Label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FechaInseminacion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FechaInseminacion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <Label class = "control-label col-md-2">Fecha Parto</Label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FechaParto, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FechaParto, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Varraco</label>
                            <div class="col-md-10">
                                @Html.DropDownList("IdVarraco", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdVarraco, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <Label class = "control-label col-md-2">Fecha Vacuna 1 </Label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Fvacuna1, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Fvacuna1, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <Label class="control-label col-md-2">Fecha Vacuna 2 </Label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Fvacuna2, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Fvacuna2, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <Label class = "control-label col-md-2">Fecha Registro</Label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FechaRegistro, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <Label class = "control-label col-md-2">Lote</Label>
                            <div class="col-md-10">
                                @Html.DropDownList("IdLote", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdLote, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-9 col-sm-3" align="right">
                                <input type="submit" value="Modificar" class="btn btn-success" />
                                @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-info" })
                            </div>
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>
</div>
@section Validar{
    <script type="text/javascript">
        $("#Validacion").validate({
            rules: {
                FechaInseminacion: {
                    required: true,
                    date: true
                },

                FechaParto: {
                    required: true,
                    date: true
                },
                Fvacuna1: {
                    required: true,
                    date: true
                },
                Fvacuna2: {
                    required: true,
                    date: true
                }

            }
        });
    </script>
}


