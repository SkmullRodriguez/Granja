@model IEnumerable<GranjaSystem.Models.tblDetalleLote>

@{
    ViewBag.Title = "Control de Lotes";
}

<div class="row content container-fluid">
    <div class="col-sm-offset-8 col-sm-4" align="right">
        <button type="button" title="Eliminar Lote" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#myModal"><i class="fa fa-trash"></i></button>
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        
                    </div>
                    <div class="modal-body">
                        <div class="jumbotron alert-danger text-center">
                            <h3>ESTAS SEGURO DE ELIMINAR EL LOTE Y SUS REGISTROS</h3>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <form action="@Url.Action("Delete","Lotes",new {id = ViewBag.id})" method="post">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <button type="button" class="btn btn-info" data-dismiss="modal">Cerrar</button>
                        </form>
                        
                    </div>
                </div>

            </div>
        </div>

    </div>
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><h4>CERDAS DEL LOTES </h4></div>
        <div class="panel-body bg-gray">
            <table id="Tabla" class="table table-bordered table-hover text-center">
                <thead>
                    <tr>
                        <th>
                            Cerda
                        </th>
                        <th>
                            Fecha Inseminacion
                        </th>
                        <th>
                            Fecha Parto
                        </th>
                        <th>
                            Varraco
                        </th>
                        <th>
                            Vacuna Litter
                        </th>
                        <th>
                            Vacuna Litter P
                        </th>
                        <th>
                            Vacuna D VitaminaA
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Observaciones)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Estado)
                        </th>
                        <th><i class="fa fa-gear"></i> </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cerdas.NumCerda)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaInseminacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaParto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Varracos.NumVarraco)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fvacuna1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fvacuna15)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fvacuna2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Observaciones)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "CargarFicha", "Fichas", new { id = item.IdDLote }, new { @class = "fa fa-plus btn btn-info", title = "LLenar Ficha" })
                                @Html.ActionLink(" ", "Details", new { id = item.IdDLote }, new { @class = "fa fa-eye btn btn-warning", title = "Ver Detalles" })
                                @Html.ActionLink(" ", "Delete", new { id = item.IdDLote, idC = item.IdCerda }, new { @class = "fa fa-trash btn btn-danger", title = "Eliminar" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <div class="form-group">
                <div class="col-sm-offset-9 col-sm-3" align="right">
                    @Html.ActionLink("Atras", "Index","Lotes",null, new { @class = "btn btn-info" })
                </div>
            </div>
        </div>
    </div>
</div>
